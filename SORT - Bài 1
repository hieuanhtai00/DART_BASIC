Bài 1: Sử dụng mảng 1 chiều nhập vào dãy số nguyên gồm n phần tử. Sắp xếp các phần tử theo thứ tự tăng dần, giảm dần ( Sử dụng switch...case).

import 'dart:io';

class Sort {
  List<int> list = List.filled(20, 0);
  int size = 0;
  Sort(int n) {
    this.size = n;
  }
  InputList() {
    for (int i = 0; i < size; ++i) {
      list[i] = int.parse(stdin.readLineSync()!);
    }
  }

  BubleSortAsscending() {
    int temp;
    for (int i = 1; i < size; ++i) {
      for (int j = 0; j < size - i; ++j) {
        if (list[j] > list[j + 1]) {
          temp = list[j];
          list[j] = list[j + 1];
          list[j + 1] = temp;
        }
      }
    }
  }

  BubleSortDescending() {
    int temp;
    for (int i = 0; i < size - 1; ++i) {
      for (int j = 0; j < size - i - 1; ++j) {
        if (list[j] < list[j + 1]) {
          temp = list[j];
          list[j] = list[j + 1];
          list[j + 1] = temp;
        }
      }
    }
  }

  MenuSort(int select) {
    switch (select) {
      case 1:
        BubleSortAsscending();
        print('Mang tang dan : ');
        OutputList();
        print('-----ACCEPT-----');
        break;
      case 2:
        BubleSortDescending();
        print('Mang giam dan : ');
        OutputList();
        print('-----ACCEPT-----');
        break;
    }
  }

  OutputList() {
    for (int i = 0; i < size; ++i) {
      print(list[i]);
    }
  }
}

void main() {
  print("Nhap so luong phan tu cua LIST : ");
  int n = int.parse(stdin.readLineSync()!);
  print(n);
  Sort s = Sort(n);
  print('Nhap mang : ');
  s.InputList();
  print('Moi nhap lua chon :');
  print('''Nhap 1 : SAP XEP TANG DAN
Nhap 2: SAP XEP GIAM DAN''');
  s.MenuSort(int.parse(stdin.readLineSync()!));
}
